{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@daos/*": ["src/daos/*"],
      "@entities/*": ["src/entities/*"],
      "@jobs/*": ["src/jobs/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@shared/*": ["src/shared/*"],
      "@server": ["src/Server"],
      "@websocket": ["src/WebSocket"]
    },
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"]
}
